{
  "name": "@jarrodek/pluralize",
  "version": "1.0.2",
  "description": "Pluralize and singularize any word",
  "type": "module",
  "main": "dist/pluralize.js",
  "types": "dist/pluralize.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "wireit",
    "test": "node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "coverage": "c8 --reporter lcov --reporter text node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "lint": "wireit",
    "lint:eslint": "wireit",
    "lint:prettier": "wireit",
    "format": "wireit",
    "format:eslint": "wireit",
    "format:prettier": "wireit",
    "prepare": "husky"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*",
        "tsconfig.json"
      ],
      "output": [
        "dist",
        ".tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier"
      ]
    },
    "lint:eslint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ],
      "output": []
    },
    "lint:prettier": {
      "command": "prettier \"**/*.ts\" --check"
    },
    "format": {
      "dependencies": [
        "format:eslint",
        "format:prettier"
      ]
    },
    "format:eslint": {
      "command": "eslint --color --cache --fix --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ],
      "output": []
    },
    "format:prettier": {
      "command": "prettier \"**/*.ts\" --write"
    }
  },
  "repository": "https://github.com/jarrodek/pluralize.git",
  "keywords": [
    "plural",
    "plurals",
    "pluralize",
    "singular",
    "singularize",
    "inflection"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "contributors": [
    {
      "name": "Pawel Uchida-Psztyc"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.4.0",
    "@pawel-up/semver": "^0.1.4",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "c8": "^10.1.3",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "wireit": "^0.14.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
